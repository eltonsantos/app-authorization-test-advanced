<p id="notice"><%= notice %></p>

<h1>Search product</h1>
<%= search_form_for @q do |f| %>
  <%= f.label :name_cont, "Name" %>
  <br />
  <%= f.search_field :name_cont %>
  <br />
  <%= f.label :hd, "Brand" %>
  <br />
  <%= f.collection_check_boxes :brand, Product.all, :brand, :brand %>
  <br />
  <%= f.label :hd, "HD" %>
  <br />
  <%= f.collection_check_boxes :hd, Product.all, :hd, :hd %>
  <br />
  <%= f.label :hd, "RAM" %>
  <br />
  <%= f.collection_check_boxes :ram, Product.all, :ram, :ram %>
  <br />
  <%= f.label :hd, "Screen" %>
  <br />
  <%= f.collection_check_boxes :screen, Product.all, :screen, :screen %>
  <br />
  <%= f.label :hd, "CPU" %>
  <br />
  <%= f.collection_check_boxes :cpu, Product.all, :cpu, :cpu %>
  <br />
  <%= f.submit "Search" %>
<% end %>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Qtd</th>
      <th>Brand</th>
      <th>HD</th>
      <th>RAM</th>
      <th>Screen</th>
      <th>CPU</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.qtd %></td>
        <td><%= product.brand %></td>
        <td><%= product.hd %></td>
        <td><%= product.ram %></td>
        <td><%= product.screen %></td>
        <td><%= product.cpu %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

